{
  "window.zoomLevel": 1,
  "window.titleBarStyle": "custom",
  "editor.fontFamily": "'Latin Modern Mono', 'IBM Plex Mono','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontSize": 22,
  "editor.formatOnSave": true,
  "editor.quickSuggestions": {
    "comments": true
  },
  "emmet.triggerExpansionOnTab": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.startupEditor": "none",
  "open-in-browser.default": "firefox",
  "breadcrumbs.symbolPath": "off",
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "update.mode": "none",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "files.autoSave": "afterDelay",
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "psalm.psalmScriptPath": "vendor/bin/psalm-language-server",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // On save, run both fixAll and organizeImports source actions
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true,
  },
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true
  },
  "ruby.useBundler": true, //run non-lint commands with bundle exec
  "ruby.useLanguageServer": false, // use the internal language server (see below)
  "ruby.lint": {
    "rubocop": false
  },
  "ruby.format": false, // use rubocop for formatting
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.rulers": [
    120
  ],
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "terminal.integrated.fontSize": 18,
  "nxConsole.enableTelemetry": false,
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorTheme": "Default Light+ Experimental",
  "python.languageServer": "Pylance"
}
