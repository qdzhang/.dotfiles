! URxvt

! General settings
URxvt.saveLines: 2000
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt.termName: xterm-256color
URxvt.urgentOnBell: True
URxvt.cursorBlink: True

URxvt.inputMethod: fcitx5
URxvt.preeditType: OverTheSpot

URxvt.iso14755: false
URxvt.iso14755_52: false

! Extensions
URxvt.perl-ext-common: default,clipboard,keyboard-select,matcher,resize-font,url-select

URxvt.copyCommand:  xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard

! Keybindings
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.clipboard.autocopy: true

URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
! URxvt.keysym.M-u: matcher:select
URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list

! url-select perl script settings
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.autocopy: true
URxvt.url-select.launcher: xdg-open
URxvt.url-select.underline: true
URxvt.url-select.button: 1

URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
URxvt.keysym.C-question:  resize-font:show

! Fonts
! https://github.com/powerline/fonts/issues/176

! #define font1         JetBrainsMono Nerd Font Mono
! #define font1         xos4 Terminus
#define font1         IBM Plex Mono
#define font2         Sarasa Mono SC
#define font3         DejaVu Sans Mono
#define font4         Noto Sans Mono CJK SC

URxvt*letterSpace: -1
URxvt*font:           xft:font1:size=15, xft:font2:size=15:minspace=false, xft:font3:size=15,xft:font4:size=15
URxvt*boldFont:       xft:font1:bold:size=15, xft:font2:size=15:minspace=False,xft:font3:size=15,xft:font4:size=15
URxvt*italicFont:     xft:font1:italic:size=15, xft:font2:size=15:minspace=False,xft:font3:size=15,xft:font4:size=15
URxvt*boldItalicFont: xft:font1:bold:italic:size=15, xft:font2:size=15:minspace=False, xft:font3:size=15, xft:font4:size=15

URxvt.allow_bold: true

