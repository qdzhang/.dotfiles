# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{js,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.{js,mjs,json,ts,tsx}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4
tab_width = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
