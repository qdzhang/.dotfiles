# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

[*.{js,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.{js,mjs,json,ts,tsx}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{c,cpp,h,hpp}]
indent_style = tab

[*.{md,markdown}]
trim_trailing_whitespace = false
